{
    "compilerOptions": {
        "target": "es2020",
        "module": "CommonJS",
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "lib": [
            "es2020",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    }
}