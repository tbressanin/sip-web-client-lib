{
    "compilerOptions": { 
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": false,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "noEmitHelpers": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "target": "es2020",
        "outDir": "dist",
        "baseUrl": "./src",
        "allowJs": true,   
        "lib": [
            "es2020",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ],
        "types": [
            "node",
            "reflect-metadata"
        ],
    }
}